<%- include('partials/_header-bare') -%>

  <main class="container ">
    <div class="row justify-content-center">
      <section class="mt-5">
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach( el=> { %>
            <div class="alert alert-danger">
              <%= el.msg %>
            </div>
            <% }) %>
              <% } %>
                <% if (locals.messages.info) { %>
                  <% messages.info.forEach( el=> { %>
                    <div class="alert alert-info">
                      <%= el.msg %>
                    </div>
                    <% }) %>
                      <% } %>

                        <!-- Login Form -->
                        <div class='text-center'>
                          <img src="/imgs/logo.png" class='form-logo' alt="Company Logo">
                        </div>

                        <div class='text-center user-form'>
                          <form action="/login" method="POST" class="text-center member-form">

                            <div class="mb-3">
                              <label for="email" class="form-label">Email address</label>
                              <input type="email" class="form-control" id="email" placeholder="example@email.com"
                                aria-describedby="email" name="email" autofocus />
                            </div>

                            <div class="mb-3">
                              <label for="password" class="form-label">Password</label>
                              <input type="password" class="form-control" id="password" placeholder="********"
                                name="password" />
                            </div>

                            <button type="submit" class="btn btn-form">Log In</button>
                          </form>
                          <p class="text-center">Not a member? <a data-toggle="tab" href="/signup">Sign Up</a></p>
                        </div>

                        <!-- Login Form -->
      </section>

    </div>
  </main>

  <%- include('partials/_footer-bare') -%>