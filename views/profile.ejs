                                <th>Position</th>
                                <th>Company</th>
                                <td>Total</td>
                                <th>Edit</th>
                            </tr>
                        </thead>



                        <tbody>
                            <!-- Loop through all of the users shifts -->
                            <% for(let i=0; i<usersShifts.length; i++) {%>
                                <tr>
                                    <td>
                                        <%= usersShifts[i].date %>
                                    </td>

                                    <td>
                                        <%= usersShifts[i].day %>

                                    </td>
                                    <td>
                                        <%= usersShifts[i].hoursWorked %>
                                    </td>
                                    <td>
                                        <%= usersShifts[i].payPerHour %>
                                    </td>

                                    <td>
                                        <%= usersShifts[i].ccTips %>
                                    </td>
                                    <td>
                                        <%= usersShifts[i].cashTips %>
                                    </td>

                                    <td>
                                        <%= usersShifts[i].company %>
                                    </td>
                                    <td>
                                        <%= usersShifts[i].role %>
                                    </td>
                                    <td>

                                        $<%= usersShifts[i].cashTips + usersShifts[i].ccTips +
                                            (usersShifts[i].hoursWorked * usersShifts[i].payPerHour) %>
                                    </td>

                                    <td>
                                        <!-- Needs route to actually delete-->
                                        <button class="btn bi bi-trash" type="submit"></button>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                    <!-- End Shifts Worked-->

</div>
<div class = 'profile-right'>
    <div class = 'profile-group'>
    
        <!-- Timeline / Feed-->
        <h3> Recent Shifts </h3>
        <div class = 'timeline'>
    <% for(let i=0; i<allShifts.length; i++) {%>
        <div class = 'timeline-item'> 
            <p> A <%= (allShifts[i].role).toUpperCase() %> from <%= allShifts[i].company %> made $<%= allShifts[i].cashTips + allShifts[i].ccTips + (allShifts[i].hoursWorked * allShifts[i].payPerHour) %> working <%= allShifts[i].hoursWorked%> hours  <%= allShifts[i].day %> </p>
            <!-- Need to create a post/put action form to update flags-->
            <button class="btn bi bi-flag" id='flag-post' type="submit"> </button>
        </div>

    <% } %>
</div>

</div>
<!-- Feed Ends -->


</div>

</div>
       

       
       



