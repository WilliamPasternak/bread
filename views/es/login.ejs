<%- include('../partials/ES/_header-bare') -%>

  <main class="container ">
    <div class="row justify-content-center">
      <section class="mt-5">

        <!-- If Error Messages -->
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach( el=> { %>
            <div class="alert alert-danger">
              <%= el.msg %>
            </div>
            <% }) %>
              <% } %>
                <% if (locals.messages.info) { %>
                  <% messages.info.forEach( el=> { %>
                    <div class="alert alert-info">
                      <%= el.msg %>
                    </div>
                    <% }) %>
                      <% } %>

                      <!-- Password Changed Successfully Sign In Below--> 
                      <% if (locals.messages.success) { %>
                          <div class="alert alert-success">
                            <span> ¡Contraseña cambiada correctamente! Inicie sesión a continuación</span>
                          </div> 
                            <% } %>

                        <!-- Login Form -->
                        <div class='text-center user-form'>
                          <div class='text-center'>
                            <a href="/es/"> <img src="/imgs/logo.png" class='form-logo' alt="Company Logo"></a>
                          </div>

                          <div class = 'auth-form'> 
                          <form action="/es/login" method="POST" class="text-center member-form">
                            <div class="mb-3"> 
                              <label for="email" class="form-label">Correo Electrónico </label>
                              <input type="email" class="form-control" id="email" placeholder="example@email.com"
                                aria-describedby="email" name="email" autofocus />
                            </div>

                            <div class="mb-3">
                              <label for="password" class="form-label">Contraseña</label>
                              <input type="password" class="form-control" id="password" placeholder="********"
                                name="password" />
                            </div>
                          </div>

                            <button type="submit" class="btn btn-form">Iniciar Sesión</button>
                          </form>
                          <p class="text-center">¿No es miembro? <a data-toggle="tab" href="/es/signup">Regístrate</a></p>
                          <p class="text-center mt-3"><a href="/es/passwordReset"> ¿Olvidaste tu contraseña? </a></p>
                        </div>

                        <!-- Login Form -->
      </section>
    </div>
  </main>

  <%- include('../partials/ES/_footer-bare') -%>