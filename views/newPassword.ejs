<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="D&D 5e Character Creator" content="Tools to help play D&D 5th Edition">
        <meta name="keywords" content="one, two, three">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <title>D&D Helper</title>

        <!-- external CSS link -->
        <link rel="stylesheet" href="/css/style.css">
    </head>

    <body class="mt-5 w-full">
        <span class="ml-10 block text-lg font-medium leading-6 text-gray-900">New Password</span>

        <main class="ml-10 sm:ml-20 mt-5 block sm:flex sm:justify-center sm:items-center w-full">
			<form action='/passwordReset/<%=tokenObj.Token%>?_method=PUT' method="POST" class="w-3/4 sm:w-1/3">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="text-red-600"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="text-red-600"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.success) { %>
                    <% messages.success.forEach( el => { %>
                        <div class="text-green-500"><%= el.msg %></div>
                    <% }) %>    
                <% } %>

                <div class="my-2">
					<label for="password" class="block text-sm font-medium text-gray-700">Password</label>
					<input type="password" name="password" id="password" autocomplete="password" class="block w-full rounded-md border-gray-300 focus:border-teal-300 focus:ring-teal-300 sm:text-sm">
				</div>

                <div class="my-2">
					<label for="confirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
					<input type="password" name="confirmPassword" id="confirmPassword" autocomplete="password" class="block w-full rounded-md border-gray-300 focus:border-teal-300 focus:ring-teal-300 sm:text-sm">
				</div>

                <div class="my-2">
					<button class="justify-center rounded-md border border-transparent bg-teal-300 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-teal-300 focus:outline-none focus:ring-2 focus:ring-teal-300 focus:ring-offset-2">Submit</button>
				</div>
            </form>
        </main>
    </body>
</html>